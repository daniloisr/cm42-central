<% content_for :title_bar do %>
  <h1><%= t('edit') %> <%= resource.class.name.humanize %></h1>
<% end %>

<div class="container container-padding-top">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2">
      <%= form_for(
        resource, as: resource_name, url: registration_path(resource_name),
        html: { method: :put, class: 'form-horizontal' }) do |f| %>

        <%# <h1 class="text-center"><%= t('edit') %1> <%= resource.class.name.humanize %1></h1> %>

        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.label :name, class: 'col-xs-4 control-label' %>
          <div class="col-xs-8"><%= f.text_field :name, autofocus: true, class: 'form-control' %></div>
        </div>

        <div class="form-group">
          <%= f.label :initials, class: 'col-xs-4 control-label' %>
          <div class="col-xs-8"><%= f.text_field :initials, class: 'form-control' %></div>
        </div>

        <div class="form-group">
          <%= f.label :username, class: 'col-xs-4 control-label' %>
          <div class="col-xs-8"><%= f.text_field :username, class: 'form-control' %></div>
        </div>

        <div class="form-group">
          <%= f.label :email, class: 'col-xs-4 control-label' %>
          <div class="col-xs-8"><%= f.email_field :email, class: 'form-control' %></div>
        </div>

        <div class="form-group">
          <%= f.label :locale, class: 'col-xs-4 control-label' %>
          <div class="col-xs-8"><%= f.select :locale, I18n.available_locales, { include_blank: true }, { class: 'form-control' } %></div>
        </div>

        <div class="form-group">
          <%= f.label :time_zone, class: 'col-xs-4 control-label' %>
          <div class="col-xs-8"><%= f.time_zone_select :time_zone, nil, { default: Time.zone }, { class: 'form-control' } %></div>
        </div>

        <div class="form-group">
          <%= f.label :password, class: 'col-xs-4 control-label' %>
          <div class="col-xs-8">
            <%= f.password_field :password, class: 'form-control' %>
            <div class="help-block"><%= t('.leave_blank_if_you_dont_want_to_change_it') %></div>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, class: 'col-xs-4 control-label' %>
          <div class="col-xs-8"><%= f.password_field :password_confirmation, class: 'form-control' %></div>
        </div>

        <div class="form-group">
          <%= label_tag nil, t('.notify_me_when_my_stories_are'), class: 'col-xs-4 control-label' %>

          <div class="col-xs-8">
            <div class="checkbox">
              <%= f.label :email_delivery do %>
                <%= f.check_box :email_delivery %> <%= t('story.state.delivered') %>
              <% end %>
            </div>

            <div class="checkbox">
              <%= f.label :email_acceptance do %>
                <%= f.check_box :email_acceptance %> <%= t('story.state.accepted') %>
              <% end %>
            </div>

            <div class="checkbox">
              <%= f.label :email_rejection do %>
                <%= f.check_box :email_rejection %> <%= t('story.state.rejected') %>
              <% end %>
            </div>
          </div>
        </div>

        <div class="form-group current-password">
          <%= f.label :current_password, class: 'col-xs-4 control-label' %>
          <div class="col-xs-8">
            <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %>
            <div class="help-block">
              <%= t('.we_need_your_current_password_to_confirm_your_changes') %>
            </div>
          </div>
        </div>

        <div class="actions">
          <%= link_to t(".cancel my account"), registration_path(resource_name), data: {confirm: "Are you sure?"}, method: :delete, class: 'btn btn-danger' %>
          <%= f.submit "Update", class: 'btn btn-primary pull-right' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
